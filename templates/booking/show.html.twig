{% extends 'base.html.twig' %}

{% block title %}Réservation N° : {{ booking.id }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Votre réservation N° : {{ booking.id }}</h1>

        {% if app.request.query.get('withAlert') %}
            <div class="alert alert-success">
                <h4 class="alert-heading">Bravo</h4>
                <p>
                    Votre réservation auprès de
                    <strong>
                        <a href="{{ path('user_show', {'slug': booking.ad.author.slug}) }}">{{ booking.ad.author.fullName }}</a>
                    </strong>
                    pour l'annonce
                    <strong>
                        <a href="{{ path('ads_show', {'slug': booking.ad.slug}) }}">{{ booking.ad.title }}</a>
                    </strong>
                    à bien été prise en compte !
                </p>
            </div>
        {% endif %}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <dl class="row">
                        <dt class="col-md-4">Numero</dt>
                        <dd class="col-md-8">{{ booking.id }}</dd>
                        <dt class="col-md-4">Date d'arrive</dt>
                        <dd class="col-md-8">{{ booking.startDate | date('d/m/Y') }}</dd>
                        <dt class="col-md-4">Date de depart</dt>
                        <dd class="col-md-8">{{ booking.endDate | date('d/m/Y') }}</dd>
                        <dt class="col-md-4">Nombre de nuits</dt>
                        <dd class="col-md-8">{{ booking.duration }}</dd>
                        <dt class="col-md-4">Prix par nuit</dt>
                        <dd class="col-md-8">{{ booking.ad.price | number_format(2) }} €</dd>
                        <dt class="col-md-4">Montant total</dt>
                        <dd class="col-md-8">{{ booking.amount | number_format(2) }} €</dd>
                        <dt class="col-md-4">Commentaire</dt>
                        <dd class="col-md-8">{{ booking.comment | default('Aucun commentaire')}}</dd>
                    </dl>

                    <hr size="5" noshade>

                    <h2 class="alert-heading">Votre hôte</h2>
                    <div class="row mb-3">
                        <div class="col-3">
                            <img src="{{ booking.ad.author.picture }}" class="avatar avatar-medium"
                                 alt="Avatar de la de votre hote {{ booking.ad.author.fullName }}">
                        </div>
                        <div class="col">
                            <h4>
                                <a href="{{ path('user_show', {'slug': booking.ad.author.slug}) }}">
                                    {{ booking.ad.author.fullName }}
                                </a>
                            </h4>

                            <span class="badge badge-primary">{{ booking.ad.author.ads | length }} annonces</span>
                        </div>
                    </div>
                    {{ booking.ad.author.description | raw }}
                    <a href="{{ path('user_show', {'slug': booking.ad.author.slug}) }}" class="btn btn-primary" >
                        Plus d'info sur {{ booking.ad.author.firstName }}
                    </a>
                </div>

                <div class="alert alert-light">
                    <h2 class="alert-heading">Votre avis compte!</h2>
                    {% if date() > date(booking.endDate) %}
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success">Confirmer!</button>
                        {{ form_end(form) }}
                    {% else %}
                        <p>Vous ne pourrez pas notez cette annonce tant que votre voyage ne sera pas complet!</p>
                    {% endif %}
                </div>

            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Votre hébergement</h2>

                    <h4>
                        <a href="{{ path('ads_show', {'slug': booking.ad.slug}) }}">{{ booking.ad.title }}</a>
                    </h4>
                    <img src="{{ booking.ad.coverImage }}" alt="Image de {{ booking.ad.title }}" class="img-fluid">
                    {{ booking.ad.content |raw }}
                    <a href="{{ path('user_show', {'slug': booking.ad.author.slug}) }}" class="btn btn-primary" >
                        Plus d'info
                    </a>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
