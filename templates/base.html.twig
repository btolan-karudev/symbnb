<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SymBNB -{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link href="/public/css/boostrap.min.css" rel="stylesheet">
        <link href="/public/css/app.css" rel="stylesheet">
    {% endblock %}
</head>

<body>
{% include 'partials/header.html.twig' %}

{% block body %}

{% endblock %}

{% include 'partials/footer.html.twig' %}

{% block javascripts %}
    <script src="/public/js/jquery-3.3.1.js"></script>
    <script src="/public/js/popper.min.js"></script>
    <script src="/public/js/boostrap.min.js"></script>

    <script>
        $('#add-image').click(function () {
            // je vais recuperer le numer des futures champs que je vais creer
            const index = $('#annonce_images div.form-group').length;

            // je recupere les prototype des entrees
            const tmpl = $('#annonce_images').data('prototype').replace(/__name__/g, index);

            //j injecte ce code au sein de la div
            $('#annonce_images').append(tmpl);

        });
    </script>
{% endblock %}
</body>
</html>
