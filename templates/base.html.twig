<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SymBNB -{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link href="/public/css/boostrap.min.css" rel="stylesheet">
        <link href="/public/css/app.css" rel="stylesheet">
    {% endblock %}
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('homepage') }}">SymBNB</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03"
            aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('homepage') }}"> Accueuil </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('ads_index') }}"> Annonces </a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a href="#" class="nav-link">Mon compte</a>
            </li>
        </ul>
    </div>
</nav>

{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}

<body>
{% block body %}


{% endblock %}

{% block javascripts %}
    <script src="/public/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/public/js/popper.min.js"></script>
    <script src="/public/js/boostrap.min.js"></script>
{% endblock %}
</body>
</html>
