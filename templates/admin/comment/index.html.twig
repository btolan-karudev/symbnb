{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des commentaires</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Author</th>
                <th class="text-center">Commentaire</th>
                <th class="text-center">Note</th>
                <th>Annonce</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.createdAt | date}}</td>
                    <td>
                        <img src="{{ comment.author.picture }}" class="avatar avatar-micro mr-2"
                             alt="{{ comment.author.fullName }}'s picture">
                        {{ comment.author.fullName }}
                    </td>
                    <td>
                        {{ comment.content  }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-dark rounded"> {{ comment.rating }}</span>
                    </td>
                    <td>
                        {{ comment.ad.title  }}
                    </td>
                    <td>
                        <a href="{{ path('homepage', {'id': comment.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('homepage', {'id': comment.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
