{% extends 'admin/base.html.twig' %}

{% block title %}Modification la reservation numero {{ booking.id }}{% endblock %}

{#{% form_theme form _self %}#}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification la reservation numero {{ booking.id }}</h1>

        {{ form_start(form) }}


        <div class="row">

            <div class="col">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
            </div>
            <div class="col">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
                <div class="col-md-12 text-center mt-5">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
