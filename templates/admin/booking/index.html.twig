{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des réservations</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date}}</td>
                    <td>
                        <img src="{{ booking.booker.picture }}" class="avatar avatar-micro mr-2"
                             alt="{{ booking.booker.fullName }}'s picture">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>
                        {{ booking.ad.title  }}
                    </td>
                    <td>
                        {#<a href="{{ path('admin_booking_edit', {'id': comment.id}) }}" class="btn btn-primary">#}
                            {#<i class="fas fa-edit"></i>#}
                        {#</a>#}
                        {#<a href="{{ path('admin_booking_delete', {'id': comment.id}) }}" class="btn btn-danger">#}
                            {#<i class="fas fa-trash"></i>#}
                        {#</a>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
